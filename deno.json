{
  "name": "@kage/workspace",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "workspace": [
    "./packages/core",
    "./packages/router",
    "./packages/schema",
    "./packages/workers",
    "./benchmarks"
  ],
  "test": {
    "include": ["packages/*/test/**/*.spec.ts"]
  },
  "bench": {
    "include": ["benchmarks/**/*.bench.ts"]
  },
  "tasks": {
    "test": "deno test --allow-all --coverage=coverage",
    "test:watch": "deno test --allow-all --watch",
    "bench": "deno bench --allow-all",
    "bench:server:kage": "deno run --allow-net benchmarks/simple_json.bench.ts",
    "bench:server:hono": "deno run --allow-net benchmarks/hono_simple_json.bench.ts",
    "check": "deno check packages/*/src/**/*.ts packages/*/test/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "coverage": "deno coverage coverage --html",
    "version": "deno run --allow-read --allow-write scripts/version.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
